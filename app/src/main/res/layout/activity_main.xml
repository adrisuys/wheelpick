<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="50dp"
        android:onClick="openChwazi"
        android:background="@drawable/main_choice_chwazi"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="50dp"
        android:onClick="openWheelpick"
        android:background="@drawable/main_choice_wheel"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:onClick="openDice"
        android:background="@drawable/main_choice_dice"/>

</LinearLayout>